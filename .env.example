# .env.example - copy to .env and edit. DO NOT commit secrets.
# Basic DB and host settings
POSTGRES_USER=openfn
POSTGRES_PASSWORD=change-me-please
POSTGRES_DB=openfn_prod

# Hosts for Traefik routing
LIGHTNING_HOST=lightning.example.com
DEVTOOLS_HOST=devtools.example.com

# Let's Encrypt email (used by Traefik)
LETSENCRYPT_EMAIL=ops@example.com

# App specific secrets
# APP_SECRET should be strong (use openssl rand -base64 32)
APP_SECRET=replace-with-strong-secret

# Resource tuning
# Set to the public URL of your OpenFn instance if needed by the app
PUBLIC_URL=https://lightning.example.com
